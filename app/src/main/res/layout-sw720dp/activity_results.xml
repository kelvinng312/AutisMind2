<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgYes"
        android:layout_width="@dimen/six_hundred"
        android:layout_height="@dimen/six_hundred"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:visibility="visible"
        android:scaleType="fitCenter"
        android:src="@drawable/img_happy_face_large" />

    <RelativeLayout
        android:id="@+id/rlProgressIDStar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.autismindd.utilities.ArrowDownloadButton
            android:id="@+id/resultProgress"
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/three_hundred"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>
</RelativeLayout>
